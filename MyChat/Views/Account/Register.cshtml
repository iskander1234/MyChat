@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer 

@model MyChat.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
    Layout = "_Layout";
}

<h2 style="text-align: center" >@Localizer["Headers"]</h2>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" asp-controller="Account" asp-action="Register" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label >@Localizer["Email"]</label><br/>
                <input class="form-control" asp-for="Email"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["UserName"]</label><br/>
                <input class="form-control" asp-for="UserName"/>
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label >@Localizer["FirstName"]</label><br/>
                <input class="form-control" asp-for="FirstName"/>
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["BirthDate"]</label><br />
                <input class="form-control" asp-for="DateOfBirth"/>
                <span asp-validation-for="DateOfBirth"></span>
            </div>
            <div class="form-group">
                <label >@Localizer["File"]</label><br />
                <input class="form-control-file" asp-for="File"/>
                <span asp-validation-for="File"></span>
            </div>
            <div class="form-group">
                <label >@Localizer["Password"]</label><br />
                <input type="password" class="form-control password" asp-for="Password" />
                <label >
                    <input class="show-password" type="checkbox"> @Localizer["Show"]
                </label>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label >@Localizer["ConfirmPassword"]</label><br />
                <input type="password" class="form-control password" asp-for="ConfirmPassword" />
                <label >
                    <input class="show-password" type="checkbox"> @Localizer["Show"]
                </label>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div>
                <input class="form-control" type="submit" value="@Localizer["Check"]" />
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <script>
            let showPassword = document.querySelectorAll(
                '.show-password'
            );
            showPassword.forEach(item =>
            item.addEventListener('click', toggleType)
            );
            function toggleType() {
                let input = this.closest('.form-group').querySelector('.password');
                if (input.type === 'password'){
                    input.type = 'text';
                }else{
                    input.type = 'password';
                }
            }   
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}